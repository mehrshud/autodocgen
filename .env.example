# AutoDocGen configuration

# Application settings
DEBUG=True  # Enable/Disable debug mode
LOG_LEVEL=INFO  # Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DOCGEN_VERSION=1.0.0  # AutoDocGen version

# Redis settings
REDIS_HOST=localhost  # Redis host
REDIS_PORT=6379  # Redis port
REDIS_DB=0  # Redis database
REDIS_PASSWORD=  # Redis password (leave blank if no password)

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0  # Celery broker URL
CELERY_RESULT_BACKEND=redis://localhost:6379/0  # Celery result backend URL
CELERY_ACCEPT_CONTENT=['json']  # Celery accepted content types
CELERY_TASK_ALWAYS_EAGER=False  # Enable/Disable eager task execution
CELERY_TASK_EAGER_PROPAGATES_EXCEPTIONS=True  # Enable/Disable eager task exception propagation

# Asyncio settings
ASYNCIO_MAX_WORKERS=10  # Maximum number of asyncio workers

# Documentation settings
DOC_OUTPUT_DIR=./docs  # Documentation output directory
DOC_INPUT_DIR=./input  # Documentation input directory

# Other settings
SECRET_KEY=my_secret_key  # Secret key for security purposes
